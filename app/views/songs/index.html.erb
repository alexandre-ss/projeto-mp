<p id="notice"><%= notice %></p>

<h1>Songs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.artist %></td>
        <td><%= link_to 'Show', song %></td>
        <%if current_user.id == song.user_id%>
            <td><%= link_to 'Edit', edit_song_path(song) %></td>
            <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
        <% aux = Interest.where(user_id: current_user.id , song_id: song.id).first %>
        <% if aux.nil? %>
            <td><%= link_to 'Like', create_interests_path(:song_id => song.id, :opinion => 1, :user_id => current_user.id), method: :post, remote: true %></td>
            <td><%= link_to 'Dislike', create_interests_path(:song_id => song.id, :opinion => 0, :user_id => current_user.id), method: :post, remote: true %></td>
        <% else %>
            <%puts "entrou"%>
            <td><%= link_to 'Like', update_interests_path(:song_id => song.id, :opinion => 1, :user_id => current_user.id), method: :patch, remote: true %></td>
            <td><%= link_to 'Dislike', update_interests_path(:song_id => song.id, :opinion => 0, :user_id => current_user.id), method: :patch, remote: true%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

