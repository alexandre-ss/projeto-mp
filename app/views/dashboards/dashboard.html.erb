<p id="notice"><%= notice %></p>

<% if current_user.is_admin %>
  <h1 class = "text-center">Users</h1>

  <table class="table table-striped table-inverse table-responsive">
    <thead class="thead-inverse">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |u| %>
        <tr>
          <td><%= u.name %></td>
          <td><%= u.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h1 class = "text-center">Songs</h1>

  <table class="table table-striped table-inverse table-responsive">
    <thead class="thead-inverse">
      <tr>
        <th>Title</th>
        <th>Artist</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @songs.each do |song| %>
        <tr>
          <td><%= song.title %></td>
          <td><%= song.artist %></td>
          <td><%= link_to 'Show', song %></td>
          <%if current_user || current_user.is_admin%>
            <%if current_user.id == song.user_id || current_user.is_admin%>
                <td><%= link_to 'Edit', edit_song_path(song) %></td>
                <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <%end%>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>

  <h1>Songs</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Artist</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @songs.each do |song| %>
        <tr>
          <td><%= song.title %></td>
          <td><%= song.artist %></td>
          <td><%= link_to 'Show', song %></td>
          <%if current_user || current_user.is_admin%>
            <%if current_user.id == song.user_id || current_user.is_admin%>
                <td><%= link_to 'Edit', edit_song_path(song) %></td>
                <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <%end%>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>